{
  "name": "enterprise-node-webservice",
  "version": "1.0.0",
  "description": "Enterprise-grade Node.js webservice with microservices architecture",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/services/api-gateway/index.ts",
    "dev:user": "ts-node-dev --respawn --transpile-only src/services/user-service/index.ts",
    "build": "tsc",
    "start": "node dist/services/api-gateway/index.js",
    "start:user": "node dist/services/user-service/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:load": "artillery run tests/load/artillery.yml",
    "docker:dev": "docker-compose up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "migrate:postgres": "node-pg-migrate up",
    "migrate:postgres:down": "node-pg-migrate down",
    "proto:generate": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:src/services/api-gateway/grpc/generated --grpc_out=grpc_js:src/services/api-gateway/grpc/generated --plugin=protoc-gen-grpc=./node_modules/.bin/grpc_tools_node_protoc_plugin -I ./src/services/api-gateway/grpc/proto ./src/services/api-gateway/grpc/proto/*.proto"
  },
  "keywords": [
    "microservices",
    "nodejs",
    "typescript",
    "rest",
    "graphql",
    "grpc",
    "redis",
    "postgresql",
    "mongodb",
    "kubernetes",
    "docker",
    "prometheus",
    "grafana"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@azure/service-bus": "^7.9.4",
    "@azure/storage-blob": "^12.17.0",
    "@google-cloud/pubsub": "^4.1.0",
    "@google-cloud/storage": "^7.7.0",
    "@grpc/grpc-js": "^1.10.0",
    "@grpc/proto-loader": "^0.7.10",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/auto-instrumentations-node": "^0.41.0",
    "@opentelemetry/exporter-jaeger": "^1.22.0",
    "@opentelemetry/sdk-node": "^0.48.0",
    "amqplib": "^0.10.3",
    "aws-sdk": "^2.1540.0",
    "axios": "^1.6.5",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.0",
    "mysql2": "^3.6.5",
    "nanoid": "^3.3.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-oauth2": "^1.8.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "prom-client": "^15.1.0",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.12",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mysql": "^2.15.27",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "artillery": "^2.0.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "grpc-tools": "^1.12.4",
    "jest": "^29.7.0",
    "node-pg-migrate": "^6.2.2",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
