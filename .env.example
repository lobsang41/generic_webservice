#### Configuración General

NODE_ENV=development              # development | production | test
PORT=3000                         # Puerto del servidor
API_VERSION=v1                    # Versión de la API


#### PostgreSQL (Base de Datos de Sistema)

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=enterprise_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=tu_password_seguro
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=10


#### MySQL (Base de Datos de Aplicación)

MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=enterprise_app_db
MYSQL_USER=mysql
MYSQL_PASSWORD=tu_password_seguro
MYSQL_POOL_MIN=2
MYSQL_POOL_MAX=10


#### MongoDB

MONGO_URI=mongodb://localhost:27017/enterprise_db
MONGO_POOL_SIZE=10


#### Redis

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=                   # Opcional
REDIS_DB=0
REDIS_TTL=3600                    # TTL por defecto en segundos


#### RabbitMQ

RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=enterprise_exchange
RABBITMQ_QUEUE_PREFIX=enterprise


#### JWT

JWT_SECRET=tu-secreto-jwt-muy-seguro-32-chars-min
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=tu-secreto-refresh-muy-seguro-32-chars-min
JWT_REFRESH_EXPIRES_IN=7d


#### API Keys

API_KEY_HEADER=X-API-Key
API_KEY_LENGTH=32


#### Encriptación

ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY=tu-clave-de-32-caracteres-aqui


#### Rate Limiting

RATE_LIMIT_WINDOW_MS=900000       # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100       # Usuarios públicos
RATE_LIMIT_MAX_REQUESTS_AUTH=1000 # Usuarios autenticados


#### CORS

CORS_ORIGIN=*                     # Orígenes permitidos
CORS_CREDENTIALS=true


#### Logging

LOG_LEVEL=info                    # error | warn | info | debug
LOG_FORMAT=json                   # json | simple
LOG_DIR=./logs


#### Monitoreo

PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
ENABLE_TRACING=true


#### Audit Log Retention

AUDIT_LOG_RETENTION_DAYS=180  # Días de retención de logs (6 meses por defecto, mín: 30, máx: 730)
AUDIT_CLEANUP_ENABLED=true    # Habilitar limpieza automática de logs antiguos
AUDIT_CLEANUP_HOUR=2          # Hora del día para ejecutar limpieza (0-23, 2 AM por defecto)


#### Cron Jobs - Monthly Reset

MONTHLY_RESET_ENABLED=true                    # Habilitar reset mensual automático
MONTHLY_RESET_CRON=0 0 1 * *                  # Expresión cron (1er día del mes a medianoche)
MONTHLY_RESET_TIMEZONE=America/New_York       # Zona horaria para el job
MONTHLY_RESET_RETRY_ATTEMPTS=3                # Número de reintentos en caso de fallo
MONTHLY_RESET_RETRY_DELAY_MS=5000             # Delay entre reintentos (ms)


#### Job Notifications

JOB_NOTIFICATIONS_ENABLED=true                # Habilitar notificaciones de jobs
JOB_NOTIFICATION_WEBHOOK_URL=                 # URL de webhook (Slack, Discord, Teams)
JOB_NOTIFICATION_EMAILS=                      # Emails separados por coma
JOB_NOTIFICATION_MIN_FAILURES=1               # Mínimo de fallos para enviar alerta

